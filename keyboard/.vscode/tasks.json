    "version": "2.0.0",
    "tasks": [
        {
            "label": "build left",
            "type": "shell",
            "command": "make bireme_keyboard_left",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build right",
            "type": "shell",
            "command": "make bireme_keyboard_left",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "flash left",
            "type": "shell",
            "command": "make flash_left JLINK_SERIAL=${input:jlink_sn}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "flash right",
            "type": "shell",
            "command": "make flash_right JLINK_SERIAL=${input:jlink_sn}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },        
        {
            "label": "sdk_config",
            "type": "shell",
            "command": "make sdk_config",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "erase",
            "type": "shell",
            "command": "make erase JLINK_SERIAL=${input:jlink_sn}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "jlink_sn",
            "description": "J-Link Serial Number",
            "options": [
                "260104929",
                "260117691",
                "682140491"
              ],
            "default": "250104929",
            "type": "pickString"
        },
    ]    
}